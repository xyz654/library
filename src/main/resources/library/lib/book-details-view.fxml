<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Button?>
<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.lib.frontend.controllers.BookDetailsController"
            style="-fx-background-color: #e0d2bf;">

    <top>
        <VBox alignment="CENTER">
            <Text fx:id="titleLabel" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-fill: #b97a57;" />
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <VBox spacing="20" style="-fx-padding: 20px; -fx-font-size: 18px; -fx-alignment: center;">

                <ImageView fx:id="coverImageView" fitWidth="200" preserveRatio="true" />
                <Text fx:id="authorLabel" style="-fx-fill: #3e3e3e;" />
                <Text fx:id="categoryLabel" style="-fx-fill: #3e3e3e;" />
                <Text fx:id="descriptionLabel" wrappingWidth="400" style="-fx-fill: #3e3e3e;" />

                <Button fx:id="goBack" text="Go Back" onAction="#goBackToBookList" style="-fx-background-color: #b97a57; -fx-text-fill: #ffffff;" />
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
